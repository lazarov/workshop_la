%p#notice= notice
%p#error= flash[:error]

%p
  %b Category:
  = category.name

%br/

%p
  %b Products:
  - category.products.each do |product|
    = link_to product.title, category_product_path(category.id,product.id)

  %br
  %br

-if user_signed_in?

  %p
    %h4 New product
  %br

  = render 'products/form'

  %br

- if user_admin?
  = link_to 'Edit', edit_category_path(category), class: 'btn btn-primary btn-sm'
= link_to 'Back', categories_path, class: 'btn btn-primary btn-sm'
