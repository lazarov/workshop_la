%h2 User Profile

= form_for current_user do |f|

  %ul.list-group
    %li.list-group-item #{f.label :First_Name} : #{current_user.firstname}
    %li.list-group-item #{f.label :Last_Name} : #{current_user.lastname}
    %li.list-group-item #{f.label :email} : #{current_user.email}
    %li.list-group-item #{f.label :account_created} : #{current_user.created_at}

  %ul.list-group
    %li.list-group-item #{f.label :reviews } :
    - current_user.reviews.recent.each do | review |
      %ul.list-group-item Content: #{review.content}
      %ul
        Rating: #{review.rating}
